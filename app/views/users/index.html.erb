<% provide(:title, 'All users') %>

<%=
  link_to 'Download data as Excel',
          users_path(format: :xlsx)
%>

<h1>All users</h1>

<div class="row">
  <div class="col-md-10">
    <%= will_paginate %>

    <table class="users">

      <th><%= link_to "UIN", users_path(:sort => "UIN") %></th>
      <th><%= link_to "Name", users_path(:sort => "firstname") %></th>
      <th><%= link_to "Current Team", users_path(:sort => "currteam") %> </th>
      <th>Options</th>

      <%= render @users %>
    </table>

    <%= will_paginate %>

  </div>
</div>